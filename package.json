{
  "name": "prueba-crm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:api": "jest tests/integration/complete-api-workflow.test.ts",
    "test:real": "jest __tests__/integration/real-database-tests.test.ts",
    "verify:crm": "node scripts/verify-crm-functions.js",
    "check:database": "node scripts/check-database.js",
    "setup:vehiculo-tables": "node scripts/setup-vehiculo-tables.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:smoke": "npm run lint && npm run test:unit:coverage && playwright test --grep=\"@smoke\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/seed-database.js",
    "db:test:setup": "node scripts/setup-test-database.js",
    "migrate:postgresql": "node scripts/migrate-to-postgresql.js",
    "migrate:supabase": "node scripts/migrate-to-supabase.js",
    "clear-data": "node scripts/clear-all-data.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tailwindcss/forms": "^0.5.10",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "googleapis": "^159.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "next": "15.5.2",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "redis": "^4.6.12",
    "sharp": "^0.33.2",
    "svg2pdf.js": "^2.5.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.55.0",
    "@prisma/client": "^6.16.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.2",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prisma": "^6.16.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.2",
    "typescript": "^5"
  }
}
